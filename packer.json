{
    "variables": {
        "docker_version": "19.03.12",
        "box_version": "1903.12.{{env `BUILD_NUMBER`}}"
    },
    "builders": [
        {
            "type": "vagrant",
            "provider": "virtualbox",
            "source_path": "jumperfly/centos-7",
            "box_version": "7.8.1",
            "communicator": "ssh",
            "ssh_username": "root",
            "ssh_password": "vagrant"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "site.yml",
            "extra_arguments": [ "--extra-vars", "docker_version={{user `docker_version`}}" ]
        },
        {
            "type": "shell",
            "inline": [
                "dd if=/dev/zero of=/boot/ZERO bs=1M || echo Ignoring expected error",
                "rm /boot/ZERO",
                "dd if=/dev/zero of=/ZERO bs=1M || echo Ignoring expected error",
                "rm /ZERO",
                "sync"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant-cloud",
                "box_tag": "jumperfly/docker",
                "version": "{{user `box_version`}}"
            }
        ]
    ]
}
